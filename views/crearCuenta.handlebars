                  <div class="form-group">
                    <input type="email" name="username" data-validate = "Un correo valido es requerido, ejemplo: ex@abc.xyz" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Correo electrónico">
                  </div>
                  
