    <!--/////////////////////////////////////////////////////////////////////////-->

    <!-- MODAL AGREGAR CUENTA -->
    <!-- line modal -->
    <div class="modal fade bd-example-modal-lg" id="squarespaceModal" tabindex="-1" role="dialog"
      aria-labelledby="modalLabel" aria-hidden="true">
      <div class="modal-dialog ">
        <div class="modal-content text-dark">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span
                class="sr-only">Close</span></button>

          </div>
          <div class="modal-body ">
            <h3 class="modal-title">Agregar nueva cuenta</h3>
            <!-- content goes here -->
            <form action="/addAcount" method="POST">

              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="exampleInputName1">Nombre de la cuenta:</label>
                    <input name="account" type="text" class="form-control" id="exampleInputName1"
                      placeholder="Tarjeta de Crédito 1" required="required">
                  </div>
                </div>
              </div>
              <div class="row">
            <div class="col-lg-1 col-md-1 col-sm-1">
            </div>
            <div class="col-lg-5 col-md-5 col-sm-5">
              <button data-dismiss="modal" class="btn btn-gradient-dark btn-rounded btn-fw">Cancelar</button>
            </div>
            <div class="col-lg-5 col-md-5 col-sm-5">

              <button type="submit" class="btn btn-gradient-primary btn-rounded btn-fw">Aceptar</button>

            </div>
            <div class="col-lg-1 col-md-1 col-sm-1">

            </div>
          </div>
          </form>
          </div>
          
        </div>
      </div>
    </div>
    <!--/MODAL AGREGAR CUENTA-->

    <!--/////////////////////////////////////////////////////////////////////-->

    <!-- MODAL AGREGAR CATEGORIA DE GASTOS -->
    <!-- line modal -->
    <div class="modal fade bd-example-modal-lg" id="squarespaceModal2" tabindex="-1" role="dialog"
      aria-labelledby="modalLabel" aria-hidden="true">
      <div class="modal-dialog ">
        <div class="modal-content text-dark">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span
                class="sr-only">Close</span></button>

          </div>
          <div class="modal-body ">
            <h3 class="modal-title">Nuevo Ingreso</h3>
            <!-- content goes here -->
            <form action="/add_income" method="POST">

              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="currency">Introduzca el valor</label>
                    <input type="text" autocomplete="off" class="form-control text-left" id="currency" name="amount"
                      data-inputmask="'alias': 'numeric', 'groupSeparator': ',', 'autoGroup': true, 'digits': 2, 'digitsOptional': false, 'prefix': 'L ', 'placeholder': '0'">
                  </div>
                  <!-- /input-group -->
                </div>
                <!-- /.col-lg-6 -->
                <div class="col-md-6">

                  <div class="form-group">
                    <label for="date">Fecha</label>
                    <div class="input-group date">
                      <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                      </div>
                      <input type="text" autocomplete="off" name="date" class="form-control pull-right dateselect"
                        id="datepicker" required="required">
                    </div>
                    <!-- /.input group -->
                  </div>

                  <!-- /.col-lg-6 -->
                </div>

                <!-- /.input group -->
              </div>

              <div class="form-group">
                <label>Descripción</label>
                <input type="text" autocomplete="off" name="comment" class="form-control" placeholder="Descripcion">
              </div>


              <div class="row">

                <div class="col-md-6">
                  <div class="form-group">
                    <label for="sel1">Categoría</label>
                    <select class="form-control" name="category" id="sel1">

                    </select>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-group">
                    <label for="sel1">Cuenta</label>
                    <select class="form-control" name="account" id="sel1">
                      <option>1</option>
                      <option>2</option>
                      <option>3</option>
                      <option>4</option>
                    </select>
                  </div>
                </div>
              </div>

              <button type="submit" hidden="hidden" id="addIncome-button"></button>

            </form>

          </div>

          <div class="row">
            <div class="col-lg-1 col-md-1 col-sm-1">

            </div>
            <div class="col-lg-5 col-md-5 col-sm-5">

              <button type="button" class="btn btn-gradient-dark btn-rounded btn-fw">Cancelar</button>

            </div>
            <div class="col-lg-5 col-md-5 col-sm-5">

              <button type="button" class="btn btn-gradient-primary btn-rounded btn-fw">Aceptar</button>

            </div>
            <div class="col-lg-1 col-md-1 col-sm-1">

            </div>
          </div>
        </div>
      </div>
    </div>
    <!--/MODAL AGREGAR CATEGORIA DE GASTO-->

    <!--/////////////////////////////////////////////////////////////////////////////-->

    <!-- MODAL AGREGAR INGRESO -->
    <!-- line modal -->
    <div class="modal fade bd-example-modal-lg" id="squarespaceModal3" tabindex="-1" role="dialog"
      aria-labelledby="modalLabel" aria-hidden="true">
      <div class="modal-dialog ">
        <div class="modal-content text-dark">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span
                class="sr-only">Close</span></button>

          </div>
          <div class="modal-body ">
            <h3 class="modal-title">Agregar nuevo ingreso</h3>
            <!-- content goes here -->
            <form action="/addIncome" method="POST">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="currency">Cantidad</label>
                    <input type="number" autocomplete="off" class="form-control text-left" id="currency" name="amount"
                      data-inputmask="'alias': 'numeric', 'groupSeparator': ',', 'autoGroup': true, 'digits': 2, 'digitsOptional': false, 'prefix': 'L ', 'placeholder': '0'">
                  </div>
                  <!-- /input-group -->
                </div>
                <!-- /.col-lg-6 -->
                <div class="col-lg-6">
                    <div class="form-group">
                    <label for="sel1">Cuenta</label>
                    <select class="form-control" name="account" id="sel1">
                      {{#accountLister data}}
                      {{/accountLister}}
                    </select>
                  </div>
                </div>
                <!-- /.input group -->
              </div>

              <div class="form-group">
                <label>Descripción</label>
                <input type="text" autocomplete="off" name="comment" class="form-control" placeholder="Descripcion">
              </div>
              <div class="row">
            <div class="col-lg-1 col-md-1 col-sm-1">

            </div>
            <div class="col-lg-5 col-md-5 col-sm-5">

              <button type="button" class="btn btn-gradient-dark btn-rounded btn-fw">Cancelar</button>

            </div>
            <div class="col-lg-5 col-md-5 col-sm-5">

              <button type="submit" class="btn btn-gradient-primary btn-rounded btn-fw">Aceptar</button>

            </div>
            <div class="col-lg-1 col-md-1 col-sm-1">

            </div>
          </div>
            </form>

          </div>
        </div>
      </div>
    </div>
    <!--/MODAL AGREGAR INGRESO -->

    <!--///////////////////////////////////////////////////////////////////////////-->

    <!-- MODAL AGREGAR GASTO-->
    <div class="modal fade bd-example-modal-lg" id="squarespaceModal4" tabindex="-1" role="dialog"
      aria-labelledby="modalLabel" aria-hidden="true">
      <div class="modal-dialog ">
        <div class="modal-content text-dark">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span
                class="sr-only">Close</span></button>

          </div>
          <div class="modal-body ">
            <h3 class="modal-title">Agregar un nuevo gasto</h3>
            <!-- content goes here -->
            <form action="/addExpense" method="POST">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="currency">Cantidad</label>
                    <input type="number" autocomplete="off" class="form-control text-left" id="currency" name="amount"
                      data-inputmask="'alias': 'numeric', 'groupSeparator': ',', 'autoGroup': true, 'digits': 2, 'digitsOptional': false, 'prefix': 'L ', 'placeholder': '0'">
                  </div>
                  <!-- /input-group -->
                </div>
                <!-- /.col-lg-6 -->
                <div class="col-lg-6">
                    <!-- Tipo de gasto -->
                  <div class="form-group ">
                    <label for="exampleFormControlSelect1">Selecione el tipo de gasto</label>
                    <select name="category" class="form-control form-control-lg" id="exampleFormControlSelect1">
                      {{#Categorias cualquierCosa}}
                      {{/Categorias}}
                    </select>
                  </div>
                </div>
                <!-- /.input group -->

                <div class="col-lg-6">
                    <div class="form-group">
                    <label for="sel1">Cuenta</label>
                    <select type="text" class="form-control" name="account" id="sel1">
                      {{#accountLister data}}
                      {{/accountLister}}
                    </select>
                  </div>
                </div>
                
              </div>
        
              <div class="form-group">
                <label>Descripción</label>
                <input type="text" autocomplete="off" name="comment" class="form-control" placeholder="Descripcion">
              </div>
              <div class="row">
            <div class="col-lg-1 col-md-1 col-sm-1">

            </div>
            <div class="col-lg-5 col-md-5 col-sm-5">

              <button type="button" class="btn btn-gradient-dark btn-rounded btn-fw">Cancelar</button>

            </div>
            <div class="col-lg-5 col-md-5 col-sm-5">

              <button type="submit" class="btn btn-gradient-primary btn-rounded btn-fw">Aceptar</button>

            </div>
            <div class="col-lg-1 col-md-1 col-sm-1">

            </div>
          </div>
            </form>

          </div>
        </div>
      </div>
    </div>
    <!--/MODAL AGREGAR GASTO -->

