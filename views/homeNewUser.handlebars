</head>

<body>

    <div class="container-scroller">

        <!-- partial:partials/_navbar.html -->
        <!--header-->
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo" href="index.html"><img src="/images/logo.svg" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" href="/"><img src="/images/logo-mini.svg"
                        alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-stretch">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>

                <ul class="navbar-nav navbar-nav-right">
                    <div id="userName">
                        <!-- Nombre del usuario -->
                        <p> <span>Bienvenida</span> {{user.name}}</p>
                    </div>
                    
                    <li class="nav-item nav-logout d-none d-lg-block">
                        <a class="nav-link" href="/logout">
                            <i class="mdi mdi-exit-to-app"></i>
                            Cerrar Sesión
                        </a>
                    </li>
                    <li class="nav-item nav-settings d-none d-lg-block">
                        <a class="nav-link" href="#">
                            <i class="mdi mdi-format-line-spacing"></i>
                        </a>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button"
                    data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <!--Fin header-->

        <!-- partial -->

        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->

            <!--sidebar-->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item nav-profile">
                        <a href="#" class="nav-link">
                            <div class="nav-profile-image">
                                <img src="/images/faces/face1.jpg" alt="profile">
                                <span class="login-status online"></span>
                                <!--change to offline or busy as needed-->
                            </div>
                            <div class="nav-profile-text d-flex flex-column">
                                <span class="font-weight-bold mb-2">David Grey. H</span>
                                <span class="text-secondary text-small">Project Manager</span>
                            </div>
                            <i class="mdi mdi-bookmark-check text-success nav-profile-badge"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/appHome">
                            <span class="menu-title">Inicio</span>
                            <i class="mdi mdi-home menu-icon"></i>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- fin sidebar -->
            <!-- partial -->

            <div id="navColor" class="main-panel">
                <div class="page-header">
                    <h3 class="page-title">
                        <span class="page-title-icon bg-gradient-primary text-white mr-2">
                            <i class="mdi mdi-home"></i>
                        </span> Inicio </h3>
                    <nav aria-label="breadcrumb">
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page">
                                <span></span>Mis cuentas <i
                                    class="mdi mdi-cash-multiple icon-sm text-primary align-middle"></i>
                            </li>
                        </ul>
                    </nav>
                </div>

                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" checked>
                        ¡Has dado el primer paso para la administración de tu dinero!
                        <i class="input-helper"></i>
                    </label>
                </div>
                <!--Div resúmen de cuentas-->
                <div class="row ">
                    <!-- Cuenta-->
                    <div class="col-md-4 stretch-card grid-margin">
                        <div class="card bg-gradient-danger card-img-holder text-white">
                            <div class="card-body">
                                <img src="/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                                <h4 class="font-weight-normal mb-3">Cuenta <i
                                        class="mdi mdi-chart-line mdi-24px float-right"></i>
                                </h4>
                                <h2 class="mb-5">$ 0.00</h2>
                                <h6 class="card-text">Ahorros 0%</h6>
                            </div>
                        </div>
                    </div>
                    <!--Fin tarjeta de cuenta-->

                    <!-- Formularios para crear nueva cuenta-->
                    
                        <div class="col-md-6 grid-margin stretch-card">
                            <form action="/start" method="POST">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Crea tu primera cuenta.</h4>
                                    <p class="card-description"> Ingresa la cuenta que quieras gestionar, por ejemplo la
                                        cuenta de tu tarjeta de credito. </p>

                                    <div class="form-group">
                                        <label for="exampleInputName1">Nombre de la cuenta:</label>
                                        <input name="account" type="text" class="form-control" id="exampleInputName1"
                                            placeholder="Tarjeta de Crédito 1" required="required">
                                    </div>
    
                                    <div class="form-group">
                                        <label for="exampleInputName1">Presupuesto mensual:</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text bg-gradient-primary text-white">L</span>
                                            </div>
                                            <input name="budget" type="number" class="form-control" placeholder="2,000.00"
                                                aria-label="Amount (to the nearest dollar)" required="required">
                                            <div class="input-group-append">
                    
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-block btn-sm btn-gradient-primary mt-4">+ Agregar cuenta</button>
                                </div>
                            </div>
                            <!-- Fin del formularios para crear nueva cuenta-->
                        </form>
                        </div>
                    

                </div>
                <!--Fin div resúmenm de cuentas-->
                <!-- main-panel ends -->
            </div>
            <!-- page-body-wrapper ends -->
        </div>
        <!-- container-scroller -->
        <!-- plugins:js -->
        <script src="/vendors/js/vendor.bundle.base.js"></script>
        <!-- endinject -->
        <!-- Plugin js for this page -->
        <script src="/vendors/chart.js/Chart.min.js"></script>
        <!-- End plugin js for this page -->
        <!-- inject:js -->
        <script src="/js/off-canvas.js"></script>
        <script src="/js/hoverable-collapse.js"></script>
        <script src="/js/misc.js"></script>
        <!-- endinject -->
        <!-- Custom js for this page -->
        <script src="/js/dashboard.js"></script>
        <script src="/js/todolist.js"></script>
        <!-- End custom js for this page -->
</body>

</html>